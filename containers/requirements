#!/usr/bin/env bash

check_software_requirements() {
  $(command -v python3) containers/requirements.py
}

check_hosts_file() {
  if [[ ! $(grep -o ${REVERSE_PROXY_IP} /etc/hosts) ]] || \
     [[ ! $(grep -o ${SEARCH_IP} /etc/hosts) ]] || \
     [[ ! $(grep -o ${MIRROR_IP} /etc/hosts) ]]; then
    echo -e "${RED}Your local /etc/hosts file is not correctly configured.${COLOR_ENDING}"
cat <<EOF

You should add the below entries:

${REVERSE_PROXY_IP}    drucker.local phpmyadmin.local adminer.local lightning.local reservoir.local blt.local
${SEARCH_IP}   search.local
${MIRROR_IP}   mirror.local
EOF
    exit 0
  fi
}

check_ssh_config_file() {
  if [[ ! $(grep -o ${REVERSE_PROXY_IP} ~/.ssh/config) ]]; then
    echo -e "${RED}Your local ~/.ssh/config file is not correctly configured.${COLOR_ENDING}"
cat <<EOF

You should add the below entries:

Host ${BASE_CONTAINER_IP} ${REVERSE_PROXY_IP} ${WEB_IP} ${DB_IP} ${SEARCH_IP} ${MIRROR_IP}
  StrictHostKeyChecking no
  UserKnownHostsFile=/dev/null
  LogLevel=error
EOF
    exit 0
  fi
}
